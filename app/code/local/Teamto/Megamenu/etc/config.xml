<?xml version="1.0"?>
<config>
    <modules>
        <Teamto_Megamenu>
            <version>0.1.0</version>
        </Teamto_Megamenu>
    </modules>
    <global>
        <blocks>
            <megamenu>
                <class>Teamto_Megamenu_Block</class>
            </megamenu>
        </blocks>
        <resources>
            <teamto_megamenu_setup>
                <setup>
                    <module>Teamto_Megamenu</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </teamto_megamenu_setup>
            <teamto_megamenu_setup_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </teamto_megamenu_setup_write>
            <teamto_megamenu_setup_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </teamto_megamenu_setup_read>
        </resources>
    </global>
    <frontend>
        <routers>
            <megamenu>
                <use>standard</use>
                <args>
                    <module>Teamto_Megamenu</module>
                    <frontName>megamenu</frontName>
                </args>
            </megamenu>
        </routers>

        <layout>
            <updates>
                <megamenu>
                    <file>megamenu.xml</file>
                </megamenu>
            </updates>
        </layout>
    </frontend>

</config>