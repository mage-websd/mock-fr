<?xml version="1.0"?>
<config>
    <modules>
        <Teamto_Mirrored>
            <version>0.1.0</version>
        </Teamto_Mirrored>
    </modules>
    <global>
        <models>
            <mirrored>
                <class>Teamto_Mirrored_Model</class>
                <resourceModel>teamto_mirrored_resource</resourceModel>
            </mirrored>
        </models>

        <resources>
            <teamto_mirrored_setup>
                <setup>
                    <module>Teamto_Mirrored</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </teamto_mirrored_setup>

            <teamto_mirrored_setup_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </teamto_mirrored_setup_write>
            <teamto_mirrored_setup_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </teamto_mirrored_setup_read>

        </resources>
    </global>

    <frontend>
        <layout>
            <updates>
                <mirrored>
                    <file>teamto_mirrored.xml</file>
                </mirrored>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <events>
            <catalog_category_prepare_save>
                <observers>
                    <mirrored>
                        <type>singleton</type>
                        <class>mirrored/observer_category</class>
                        <method>category_before_save</method>
                    </mirrored>
                </observers>
            </catalog_category_prepare_save>
        </events>

        <layout>
            <updates>
                <mirrored module="teamto_mirrored">
                    <file>teamto_mirrored.xml</file>
                </mirrored>
            </updates>
        </layout>

    </adminhtml>

</config>