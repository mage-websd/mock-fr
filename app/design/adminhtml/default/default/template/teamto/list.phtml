$aryFeaturedProductId = $this->getFeaturedProductId();
?>

<!-- js script to add attribute checked to featured products-->
<script>
    jQuery(document).ready(function () {
        var aryId = [];
        <?php foreach($aryFeaturedProductId as $id){ ?>
        aryId.push("<?php echo $id; ?>")
        <?php } ?>
        for (var i = 0; i <= aryId.length; i++) {
            jQuery('.checkbox').each(function () {
                if (jQuery(this).val() == aryId[i]) {
                    jQuery(this).attr("checked", "");
                }
            });
        }
    });
</script>
