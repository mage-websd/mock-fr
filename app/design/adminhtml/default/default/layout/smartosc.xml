<?xml version="1.0"?>
<layout>
    <adminhtml_featured_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>js/featuredProduct/featuredProduct.js</name>
            </action>

            <action method="addItem">
                <type>skin_js</type>
                <name>js/jquery-1.11.1.min.js</name>
            </action>

            <action method="addItem">
                <type>skin_js</type>
                <name>js/noConflict-jquery.js</name>
            </action>

            <action method="addItem">
                <type>skin_js</type>
                <name>js/noConflict.js</name>
            </action>

            <action method="setTitle" translate="title">
                <title>SmartOSC / Featured Products</title>
            </action>
        </reference>
        <reference name="menu">
            <action method="setActive">
                <menupath>teamto/featured</menupath>
            </action>
        </reference>
        <reference name="content">
            <block type="teamto_featured/featured_List" name="products_list" template="teamto/list.phtml"></block>
        </reference>
    </adminhtml_featured_index>

    <adminhtml_featured_grid>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="teamto_featured/featured_grid" name="featured.product.grid"/>
        </block>
    </adminhtml_featured_grid>
</layout>


