<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <block name="head.add.layout" type="core/template"
                   template="teamto/layout/head.phtml"/>
        </reference>

    </default>

    <cms_page_view>
        <reference name="head">
            <block name="head.add.layout" type="core/template"
                   template="teamto/layout/head.phtml"/>
            <block name="head.add.feature.home" type="core/template"
                   template="teamto/layout/head_feature_slide.phtml"/>
        </reference>
    </cms_page_view>

    <featured_index_index>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>

        <reference name="content">
            <block type="teamto_featured/featureproduct" name="featured_product" template="teamto/featured/product/list.phtml">
                    <action method="setColumnCount"><columns>4</columns></action>
            </block>
        </reference>

    </featured_index_index>

</layout>